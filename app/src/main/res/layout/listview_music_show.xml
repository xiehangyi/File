<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:id="@+id/imageView_music_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="14sp"
        android:id="@+id/textView_music_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_music_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:id="@+id/textView_music_size"
        android:layout_alignBottom="@+id/imageView_music_logo"
        android:layout_toEndOf="@+id/imageView_music_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="12sp"
        android:id="@+id/textView_1"
        android:layout_alignBottom="@+id/textView_music_size"
        android:layout_toEndOf="@+id/textView_music_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:text="New Text"
        android:id="@+id/textView_music_duration"
        android:layout_alignTop="@+id/textView_1"
        android:layout_toEndOf="@+id/textView_1"
        />
</RelativeLayout>